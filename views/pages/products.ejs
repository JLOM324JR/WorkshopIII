<% include ../partials/header %>
<script language="javascript">
function fncAlert(){
alert('Do you want to delete product');
}
</script>
<br>
<input class="form-control" id="myInput" type="text" placeholder="Search..">
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>TITLE</th>
            <th>PRICE</th>
            <th><a name="" id="" class="btn btn-success" href="/add_product" role="button">Add New</a>
            </th>
        </tr>
    </thead>
    <tbody id="myTable">
    <% products.forEach(function(product) {%>
        <tr>
            <td scope="row"><%= product.id %></td>
            <td><%= product.title %></td>
            <td><%= product.price %></td>
            <td><a name="" id="" class="btn btn-primary" href="/products/<%= product.id %>" role="button">Edit</a>
            <a  class="btn btn-danger" OnClick="JavaScript:fncAlert();" href="/product_delete/<%= product.id %>" role="button">Delete</a></td>
        </tr>
    <%}); %>
    </tbody>
</table>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>


