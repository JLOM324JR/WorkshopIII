<% include ../partials/header %>
<script language="javascript">
function delete(){ alert('Do you want to delete product');}
function edit(){ alert('Do you want to edit this product');}
</script>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>TITLE</th>
            <th>PRICE</th>
            <th><a name="" id="" class="btn btn-success" href="/add_product" role="button">Add New</a>
            </th>
        </tr>
    </thead>
    <tbody>
    <% products.forEach(function(product) {%>
        <tr>
            <td scope="row"><%= product.id %></td>
            <td><%= product.title %></td>
            <td><%= product.price %></td>

            <td><a name="" id="" class="btn btn-primary" OnClick="JavaScript:edit();"href="/products/<%= product.id %>" role="button">Edit</a>
            <a  class="btn btn-danger" OnClick="JavaScript:delete();" href="/product_delete/<%= product.id %>" role="button">Delete</a></td>
        </tr>
    <%}); %>
    </tbody>
</table>


<% include ../partials/footer %>