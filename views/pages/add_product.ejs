<% include ../partials/header %>

    <form action="/product/add_product"  method = "POST">
        <div class="jumbotron" style="background-color : #FFFFE0">
            <h1 class="display-4">PLEASE FILL INFO. YOUR PRODUCT</h1>
            <div class="form-group" style="font-size: 20px">
                <label for="">ID</label>
                <input type="number" class="form-control" value="<%= proid %>" name="id" id="" aria-describedby="helpId" placeholder="ID">
                <small id="helpId" class="form-text text-muted"></small>
            </div>

            <div class="form-group" style="font-size: 20px">
                <label for="">Title</label>
                <input type="text" class="form-control" name="title" id="" aria-describedby="helpId" placeholder="Title">
                <small id="helpId" class="form-text text-muted"></small>
            </div>

            <div class="form-group" style="font-size: 20px">
                <label for="">Price</label>
                <input type="number" class="form-control" name="price" id="" aria-describedby="helpId" placeholder="Price">
                <small id="helpId" class="form-text text-muted"></small>
            </div>

            <div class="form-group" style="font-size: 20px">
                <label for="">Time</label>
                <input type="text" class="form-control" value="<%= time %>"name="time" id="" aria-describedby="helpId" placeholder="" >
            </div>

            <a name="" id="" class="btn btn-warning" href="/products" role="button">CANCLE</a>
            <button type = "submit" class="btn btn-success">SAVE</button>
        </div>
    </form>
    
<% include ../partials/footer %>