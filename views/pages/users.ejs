<% include ../partials/header %>
<script language="javascript">
function fncAlert(){
alert('Do you want to delete product');
}
</script>

<input class="form-control" id="myInput" type="text" placeholder="Search..">
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>EMAIL</th>
            <th>PASSWORD</th>
            <th><a name="" id="" class="btn btn-success" href="/add_user" role="button">Add New</a>
            </th>
        </tr>
    </thead>
    <tbody id="myTable">
    <% users.forEach(function(user) {%>
        <tr>
            <td scope="row"><%= user.user_id %></td>
            <td><%= user.email %></td>
            <td><%= user.password %></td>
            <td><a name="" id="" class="btn btn-primary" href="/users/<%= user.user_id %>" role="button">Edit</a>
            <a  class="btn btn-danger" OnClick="JavaScript:fncAlert();" href="/user_delete/<%= user.user_id %>" role="button">Delete</a></td>
        </tr>
    <%}); %>
    </tbody>
</table>

<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>


